<%= form_for post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :when %>
    <%= f.date_field :when %>
  </div>

  <div>
    <%= f.label :story %>
    <%= f.text_area :story %>
  </div>

  <div class="custom-file">
    <% if post.image? %>
        <%= image_tag post.image.thumb.url %>
        <div>
          <%= label_tag :remove_image do %>
            Remove image
            <%= f.check_box :remove_image %>
          <% end %>
        </div>
    <% end %>
  </div>

  <%= f.label :image %>
  <%= f.file_field :image %><br>
  <%= f.hidden_field :image_cache %>

  <%= f.submit %>
<% end %>
